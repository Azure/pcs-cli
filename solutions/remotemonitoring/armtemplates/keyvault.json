{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "aadTenantId": {
            "type": "string",
            "defaultValue": "fakevalue",
            "metadata": {
                "description": "The AAD tenant identifier (GUID)"
            }
        },
        "aadAppId": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "aadAppSecret": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "authRequired": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "authIssuer": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "solutionName": {
            "type": "string",
            "metadata": {
                "description": "The name of the solution"
            }
        },
        "userPrincipalObjectId": {
            "type": "string",
            "defaultValue": "fakevalue",
            "metadata": {
                "description": "Object Id of the AAD user that will have access to the environment. Available from the Get-AzureRMADUser cmdlets"
            }
        },
        "keyVaultName": {
            "type": "string",
            "defaultValue": "[concat('keyvault-', take(uniqueString(subscription().subscriptionId, resourceGroup().id, parameters('solutionName')), 5))]",
            "metadata": {
                "description": "Name of the Key Vault"
            }
        },
        "keyVaultAccessPolicies": {
            "type": "array",
            "defaultValue": [
                {
                    "tenantId": "[parameters('aadTenantId')]",
                    "objectId": "[parameters('userPrincipalObjectId')]",
                    "permissions": {
                        "keys": ["all"],
                        "secrets": ["all"]
                    }
                }
            ],
            "metadata": {
                "description": "Access policies object {\"tenantId\":\"\",\"objectId\":\"\",\"permissions\":{\"keys\":[\"\"],\"secrets\":[\"\"]}}"
            }
        },
        "appId": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "iotHubConnectionString": {
            "type": "string",
            "metadata": {
                "description": "Connection string for the IoTHub"
            }
        },
        "documentDBConnectionString": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Storage account name"
            }
        },
        "storageAccountKey": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "storageEndpointSuffix": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "storageConnectionString": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "messagesEventHubConnectionString": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "messagesEventHubName": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "actionsEventHubConnectionString": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "actionsEventHubName": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "azureMapsKey": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "telemetryStorageType": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "tsiDataAccessFQDN": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "servicePrincipalSecret": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "seedTemplate": {
            "type": "string",
            "defaultValue": "default",
            "metadata": {
                "description": ""
            }
        },
        "cloudType": {
            "type": "string",
            "defaultValue": "Global",
            "metadata": {
                "description": ""
            }
        },
        "subscriptionId": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "solutionType": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "solutionWebsiteUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "deploymentId": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "iotHubName": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "diagnosticsEndpointUrl": {
            "type": "string",
            "defaultValue": "DEFAULT_DIAGNOSTICS_ENDPOINT_URL",
            "metadata": {
                "description": ""
            }
        },
        "applicationSecret": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "office365ConnectionUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "logicAppEndpointUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "armEndpointUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "aadEndpointUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "telemetryWebServiceUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "configWebServiceUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "iothubmanagerWebServiceUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "storageAdapterWebServiceUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "authWebServiceUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "deviceSimulationWebServiceUrl": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "keyVaultSecrets": [
            "solutionName",
            "aadTenantId",
            "userPrincipalObjectId",
            "iotHubConnectionString",
            "appId",
            "documentDBConnectionString",
            "storageAccountName",
            "storageAccountKey",
            "storageEndpointSuffix",
            "storageConnectionString",
            "messagesEventHubConnectionString",
            "messagesEventHubName",
            "actionsEventHubConnectionString",
            "actionsEventHubName",
            "authRequired",
            "azureMapsKey",
            "telemetryStorageType",
            "tsiDataAccessFQDN",
            "servicePrincipalSecret",
            "seedTemplate",
            "cloudType",
            "subscriptionId",
            "solutionType",
            "solutionWebsiteUrl",
            "deploymentId",
            "iotHubName",
            "diagnosticsEndpointUrl",
            "applicationSecret",
            "office365ConnectionUrl",
            "logicAppEndpointUrl",
            "armEndpointUrl",
            "aadEndpointUrl",
            "telemetryWebServiceUrl",
            "configWebServiceUrl",
            "iothubmanagerWebServiceUrl",
            "storageAdapterWebServiceUrl",
            "authWebServiceUrl",
            "deviceSimulationWebServiceUrl"
        ]
    },
    "resources": [
        
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[parameters('keyVaultName')]",
            "apiVersion": "2015-06-01",
            "location": "[variables('location')]",
            "tags": {
              "displayName": "KeyVault"
            },
            "properties": {
              "enabledForDeployment": "true",
              "enabledForTemplateDeployment": "true",
              "enabledForVolumeEncryption": "false",
              "tenantId": "[parameters('aadTenantId')]",
              "accessPolicies": "[parameters('keyVaultAccessPolicies')]",
              "sku": {
                "name": "Standard",
                "family": "A"
              }
            }
          },
          {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(parameters('keyVaultName'), '/', variables('keyVaultSecrets')[copyIndex()])]",
            "apiVersion": "2015-06-01",
            "properties": {
              "type": "string", 
              "value": "[parameters(variables('keyVaultSecrets')[copyIndex()])]"
            },
            "dependsOn": [
              "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
            ],
            "copy": {
              "name": "secretsCopy",
              "count": "[length(variables('keyVaultSecrets'))]"
            }
          },
          {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(parameters('keyVaultName'), '/test')]",
            "apiVersion": "2015-06-01",
            "properties": {
              "contentType": "string",
              "value": "testValue"
            },
            "dependsOn": [
              "[concat('Microsoft.KeyVault/vaults/', parameters('keyVaultName'))]"
            ]
          }
    ],
    "outputs": {
        "logicAppEndpointUrl": {
            "type": "string",
            "value": "testing"
        }
    }
}